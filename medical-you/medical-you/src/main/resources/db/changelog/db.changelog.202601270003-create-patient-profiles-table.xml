<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="202601270003-1" author="system">
        <comment>Create patient_profiles table for PHR (Personal Health Record)</comment>

        <createTable tableName="patient_profiles">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="patient_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>

            <!-- Personal Information -->
            <column name="phone_number" type="VARCHAR(20)"/>
            <column name="date_of_birth" type="DATE"/>
            <column name="gender" type="VARCHAR(20)"/>
            <column name="address" type="VARCHAR(500)"/>
            <column name="city" type="VARCHAR(100)"/>
            <column name="country" type="VARCHAR(100)"/>
            <column name="avatar_url" type="VARCHAR(500)"/>

            <!-- Medical Information -->
            <column name="blood_type" type="VARCHAR(10)"/>
            <column name="height_cm" type="DECIMAL(5,2)"/>
            <column name="weight_kg" type="DECIMAL(5,2)"/>

            <!-- JSON Arrays for medical data -->
            <column name="allergies" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="chronic_conditions" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="current_medications" type="TEXT">
                <constraints nullable="true"/>
            </column>

            <!-- Emergency Contact -->
            <column name="emergency_contact_name" type="VARCHAR(255)"/>
            <column name="emergency_contact_phone" type="VARCHAR(20)"/>
            <column name="emergency_contact_relationship" type="VARCHAR(50)"/>

            <!-- Medical ID -->
            <column name="medical_id" type="VARCHAR(20)">
                <constraints unique="true"/>
            </column>

            <!-- Audit fields -->
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <!-- Foreign key to patients table -->
        <addForeignKeyConstraint
            baseTableName="patient_profiles"
            baseColumnNames="patient_id"
            constraintName="fk_profile_patient"
            referencedTableName="patients"
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <!-- Index for faster lookups -->
        <createIndex indexName="idx_profile_patient_id" tableName="patient_profiles">
            <column name="patient_id"/>
        </createIndex>

        <createIndex indexName="idx_profile_medical_id" tableName="patient_profiles">
            <column name="medical_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
