<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Fix blood_type column size - AB_POSITIVE/AB_NEGATIVE need 11+ characters -->
    <changeSet id="202601290001-1" author="system">
        <comment>Fix blood_type column size in dependent_profiles - was VARCHAR(10), needs VARCHAR(15)</comment>

        <modifyDataType
            tableName="dependent_profiles"
            columnName="blood_type"
            newDataType="VARCHAR(15)"/>
    </changeSet>

</databaseChangeLog>
